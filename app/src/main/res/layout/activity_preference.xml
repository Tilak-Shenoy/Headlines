<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.tilak.headlines.Preference">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="8dp"
            android:text="@string/Preference"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <Button
            android:id="@+id/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@color/colorPrimary"
            android:onClick="done"
            android:text="Done"
            android:textColor="@color/white"
            android:clickable="false"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/checkBox2"
                    android:layout_alignLeft="@+id/checkBox2"
                    android:layout_alignStart="@+id/checkBox2"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0.25"/>

                <ImageView
                    android:id="@+id/imageView00"
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.25"
                    app:srcCompat="@drawable/bi" />

                <TextView
                    android:id="@+id/textView00"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0.5"
                    android:text="Business Insider"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/checkBox2"
                    android:layout_alignLeft="@+id/checkBox2"
                    android:layout_alignStart="@+id/checkBox2"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0.15" />

                <ImageView
                    android:id="@+id/imageView01"
                    android:layout_width="40dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.32"
                    app:srcCompat="@drawable/cnn" />

                <TextView
                    android:id="@+id/textView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0.65"
                    android:text="CNN"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/checkBox2"
                    android:layout_alignLeft="@+id/checkBox2"
                    android:layout_alignStart="@+id/checkBox2"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0.25" />

                <ImageView
                    android:id="@+id/imageView02"
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.28"
                    app:srcCompat="@drawable/economist" />

                <TextView
                    android:id="@+id/textView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0.6"
                    android:text="The Economist"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/checkBox2"
                    android:layout_alignLeft="@+id/checkBox2"
                    android:layout_alignStart="@+id/checkBox2"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0.15" />

                <ImageView
                    android:id="@+id/imageView03"
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.18"
                    app:srcCompat="@drawable/espn" />

                <TextView
                    android:id="@+id/textView03"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0.7"
                    android:text="ESPN"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/checkBox2"
                    android:layout_alignLeft="@+id/checkBox2"
                    android:layout_alignStart="@+id/checkBox2"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0.2" />

                <ImageView
                    android:id="@+id/imageView04"
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.27"
                    app:srcCompat="@drawable/google" />

                <TextView
                    android:id="@+id/textView04"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0.6"
                    android:text="Google News"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/checkBox2"
                    android:layout_alignLeft="@+id/checkBox2"
                    android:layout_alignStart="@+id/checkBox2"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0.15" />

                <ImageView
                    android:id="@+id/imageView05"
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.25"
                    app:srcCompat="@drawable/hindu" />

                <TextView
                    android:id="@+id/textView05"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0.65"
                    android:text="The Hindu"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/checkBox2"
                    android:layout_alignLeft="@+id/checkBox2"
                    android:layout_alignStart="@+id/checkBox2"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0.2" />

                <ImageView
                    android:id="@+id/imageView06"
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.27"
                    app:srcCompat="@drawable/natgeo" />

                <TextView
                    android:id="@+id/textView06"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0.4"
                    android:text="National Geographic"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkBox07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@+id/checkBox2"
                    android:layout_alignLeft="@+id/checkBox2"
                    android:layout_alignStart="@+id/checkBox2"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0.2" />

                <ImageView
                    android:id="@+id/imageView07"
                    android:layout_width="60dp"
                    android:layout_height="100dp"
                    android:layout_weight="0.2"
                    app:srcCompat="@drawable/tc" />

                <TextView
                    android:id="@+id/textView07"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="0.6"
                    android:text="Tech Crunch"
                    android:textAlignment="center"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
